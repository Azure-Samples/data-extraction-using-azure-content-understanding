{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "func: host start",
        "command": "func",
        "args": [
          "host", 
          "start",
          "--script-root", 
          "${workspaceFolder}/src"
        ],
        "problemMatcher": "$func-watch",
        "isBackground": true,
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}